@model About
@*
    Default About
*@
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>
        <p>Benim hakkımda bilgilere buradan ulaşabilirisiniz.</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="@Model.ImageUrl" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
                <h2>@Model.Title</h2>
                <p class="fst-italic py-3">
                    @Model.Descripion.
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>@Model.BirthDate.ToString("dd.MM.yyyy")</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@Model.Website</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@Model.Website</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@Model.City</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@ViewBag.Age</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>@Model.Graduation</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@Model.IsAvailable</span></li>
                        </ul>
                    </div>
                </div>
                
            </div>
        </div>

    </div>

</section>
