@model UserMessage
@*
    Partial Message
*@

<input type="hidden" name="UserMessageId" />

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card shadow-sm border-0">

                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-envelope-open-text"></i> Mesaj Detayı</h5>
                </div>

                <div class="card-body">
                    <p>
                        <span class="fw-bold text-dark"><i class="fas fa-user"></i> Gönderen:</span><br />
                        <span class="text-muted">@Model.Name</span>
                    </p>

                    <p>
                        <span class="fw-bold text-dark"><i class="fas fa-at"></i> Mail:</span><br />
                        <span class="text-muted">@Model.Email</span>
                    </p>

                    <p>
                        <span class="fw-bold text-dark"><i class="fas fa-tag"></i> Konu:</span><br />
                        <span class="text-muted">@Model.Subject</span>
                    </p>

                    <hr />

                    <p>
                        <span class="fw-bold text-dark"><i class="fas fa-comment-dots"></i> Mesaj:</span>
                    </p>
                    <div class="alert alert-light border rounded p-3" style="white-space:pre-line;">
                        @Model.MessageBody
                    </div>
                </div>

                <div class="card-footer text-end">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Çıkış Yap
                    </button>
                </div>

            </div>
        </div>
    </div>
</div>
